Scene {
  CONSTANTS: [
    LIGHTING_PASS: "\"Lighting\"",
    DIM_COLOR_X: "\"#d12224\"",
    DIM_COLOR_Y: "\"#0fb00f\"",
    DIM_COLOR_Z: "\"#0f56d8\"",
    PANE_Z_OFFSET:  ".4",
    PANE_Z_OFFSET2: ".8",
  ],
  color_map: <"colors/SpecialColors.mvn">, # Needed for some Panes.
  render_passes: [
    LightingPass $LIGHTING_PASS {
      shader_programs: [
        <"programs/FixedLighting.mvn">,  # Needed for Lighting program.
        <"programs/Lighting.mvn">,       # Needed for uniforms used in Panes.
        <"programs/BaseColor.mvn">,
      ],
    }
  ],
  root_node: Node {
    blocks: [
      UniformBlock {
        pass_name: $LIGHTING_PASS,
        textures: [
          Texture "IconAtlasTexture" {
            is_static: True,
            uniform_name: "uTexture",
            image: <"nodes/IconAtlas.mvn">,
            sampler: Sampler "DefaultSampler" {},
          },
        ],
      }
    ],
    children: [
      Node {
        CONSTANTS: [
          # Shorthand for instantiating pane templates.
          BG:     "CLONE \"T_PaneBackground\" \"Background\"",
          BORDER: "CLONE \"T_Border\" \"Border\"",
        ],
        TEMPLATES: [
          <"nodes/templates/PaneBackground.mvn">,
          <"nodes/templates/Border.mvn">,
          <"nodes/templates/Panes/ButtonPane.mvn">,
          <"nodes/templates/Panes/ClipPane.mvn">,
          <"nodes/templates/Panes/IconPane.mvn">,
          <"nodes/templates/Panes/TextPane.mvn">,
          <"nodes/templates/Panes/ScrollingPane.mvn">,
          <"nodes/templates/Panes/DropdownPane.mvn">,
        ],
        children: [
          CLONE "T_TextPane" "Text" {},

          BoxPane "VBox" {
            padding: 4,
            spacing: 10,
            panes: [
              SpacerPane "Spacer1" { min_size: 8 15 },
              SpacerPane "Spacer2" { resize_width: True, resize_height: True },
              SpacerPane "Spacer3" {},
            ]
          },

          BoxPane "HBox" {
            orientation: "kHorizontal",
            padding: 4,
            spacing: 10,
            panes: [
              SpacerPane "Spacer1" { min_size: 15 8 },
              SpacerPane "Spacer2" { resize_width: True, resize_height: True },
              SpacerPane "Spacer3" {},
            ]
          },

          CLONE "T_DropdownPane" "Dropdown" {},

          SwitcherPane "Switcher" {
            panes: [
              CLONE "T_ButtonPane" "But0" { min_size: 10 10 }
              CLONE "T_ButtonPane" "But1" { min_size: 10 10 }
              CLONE "T_ButtonPane" "But2" { min_size: 10 10 }
            ]
          },
        ]
      }
    ]
  },
},
