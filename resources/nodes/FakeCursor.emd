# Fake cursor used in videos created with capturevideo. This is normally
# disabled.
Node "FakeCursor" {
  disabled_flags: "kTraversal|kIntersectAll",
  shader_names: ["BaseColor"],
  scale: .002 .002 .002,
  blocks: [
    USE "T_DefaultBaseColorUniforms",
    UniformBlock {
      pass_name: $LIGHTING_PASS,
      uniforms: [ Uniform "uBaseColor" { vec4f_val: .9 .2 .8 .9 }],
    }
  ],
  shapes: [
    Polygon {
      points: [ 0 0, -30 -22, -16 -19, -30 -38 -24 -42, -10 -23, -4 -37 ]
    },
  ]
}
