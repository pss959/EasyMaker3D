Node "SliderTests" {
  # Tilt the whole setup.
  rotation: 1 1 -1 24,

  # Scale everything.
  scale: 2 2 2,

  children: [
    Node {  # Background square.
      translation: 0 0 -2,
      shapes: [ Box { size: 40 40 .1 } ],
    },

    Node {
      scale:    2 2 2,     # Should make motion reach edges.
      rotation: 0 0 1 90,  # XXXX
      translation: 4 4 -2, # Offsets.
      children: [
        Slider2DWidget {
          # is_precision_based: True,
          min_value:      -10 -10,
          max_value:       10  10,
          initial_value:  0 0,

          # These should affect only the slider geometry, not interaction.
          rotation:       0 0 1 10,
          scale:          3 3 1,
          translation:    0 4 0,

          hover_scale:    1.1 1.1 1.1,
          shapes: [
            Ellipsoid { size: 1 .5 1 },
            Ellipsoid { size: 1 .5 1, translation: 0 -.6 0 },
          ]
        },
      ]
    },

    Node {
      scale:    2 2 2,     # Should make motion reach top/bottom edges.
      rotation: 0 0 1 90,  # Makes it slide in Y direction.
      translation: 20 0 0, # Moves to right edge.
      children: [
        Slider1DWidget {
          # is_precision_based: True,
          dimension:      0,
          min_value:      -10,
          max_value:       10,
          initial_value:  0,

          # These should affect only the slider geometry, not interaction.
          rotation:       0 0 1 10,
          scale:          1 3 1,
          translation:    0 4 0,

          hover_scale:    1.1 1.1 1.1,
          shapes: [ Ellipsoid {} ]
        },
      ]
    }
  ]
}
