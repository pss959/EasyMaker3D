GridPane "TestGrid" {
  TEMPLATES: [
    CLONE "T_TextPane" "T_GridText" {
      border: $BORDER { width: 1, color: "#aa44aa" },
      font_size: 40,
    }
  ],
  background:        PaneBackground { color: "#444466" },
  resize_width:      True,
  resize_height:     True,
  row_count:         2,
  column_count:      2,
  row_spacing:       10,
  column_spacing:    10,
  padding:           4,
  expanding_rows:    [1],
  expanding_columns: [1],
  panes: [
    CLONE "T_GridText" "Row0_Col0" { text: "Row 0 Col 0" },
    CLONE "T_GridText" "Row0_Col1" { text: "Row 0 Col 1" },
    CLONE "T_GridText" "Row1_Col0" { text: "Row 1 Col 0" },
    CLONE "T_GridText" "Row1_Col1" { text: "Row 1 Col 1", font_size: 80 },
  ]
},
