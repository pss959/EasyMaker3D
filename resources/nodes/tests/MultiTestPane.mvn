BoxPane "TopBox" {
  min_size: 300 200,
  resize_width:  True,
  resize_height: True,
  padding: 10,
  spacing: 4,
  panes: [
    CLONE "T_TextPane" "TEST" {
      border: $BORDER { color: "#55ff55", width: 1 },
      text: "This is\na test",
      font_size: 14,
      line_spacing: 1.1,
      # resize_width: True,
      # min_size: 100 14,
      padding: 4,
      #halignment: "kAlignHCenter",
      #valignment: "kAlignVCenter",
    },

    CLONE "T_ButtonPane" "TestButton" {
      resize_width:  True,
      #resize_height: True,
      panes: [ $BUTTONTEXT { text: "A Regular Button" } ]
    },

    CLONE "T_TextInputPane" "TestInput" {
      initial_text: "Some text here",
    },

    GridPane "TestGrid" {
      TEMPLATES: [
        CLONE "T_TextPane" "T_GridText" { border: $BORDER { width: 1 } }
      ],
      background:        PaneBackground { color: "#444466" },
      resize_width:      True,
      resize_height:     True,
      row_count:         2,
      column_count:      2,
      row_spacing:       10,
      column_spacing:    10,
      padding:           4,
      expanding_rows:    [1],
      expanding_columns: [1],
      panes: [
        CLONE "T_GridText" "T00" { text: "Cell 0 0" },
        CLONE "T_GridText" "T01" { text: "Cell 0 1" },
        CLONE "T_GridText" "T10" { text: "Cell 1 0" },
        CLONE "T_GridText" "T11" { text: "Cell 1 1" },
      ]
    },

    ScrollingPane "FileList" {
      TEMPLATES: [
        CLONE "T_TextPane" "T_ClipText" { min_size: 1 4 }
      ],
      background: $BG { color: "#ddddaa" },
      border: $BORDER { width: 1 },
      min_size: 24  10,
      max_size: 100 60,
      resize_width:  True,
      resize_height: True,
      contents: CLONE "T_ClipPane" "Contents" {
        padding: .2,
        spacing: .1,
        resize_width:  True,
        resize_height: True,
        panes: [
          CLONE "T_ClipText" "T0" { text: "Text 0" },
          CLONE "T_ClipText" "T1" { text: "Text 1" },
          CLONE "T_ClipText" "T2" { text: "Text 2" },
          CLONE "T_ClipText" "T3" { text: "Text 3" },
          CLONE "T_ClipText" "T4" { text: "Text 4" },
          CLONE "T_ClipText" "T5" { text: "Text 5" },
        ],
      },
    },

    CLONE "T_SliderPane" "TestSlider" {
      range:     0 20,
      precision: 2,
    },

    CLONE "T_LabeledHSliderPane" "TestLabeledSlider" {
      range:     0 20,
      precision: 2,
    },

    CLONE "T_DropdownPane" "TestDropdown" {
      choices: ["Abc",
                "Defg",
                "Hijklmnop",
                "Qr st UVW"],
      choice_index: 1,
      min_size: 100 1,
    },

    SwitcherPane "SwitcherTest" {
      index: 2,
      panes: [
        CLONE "T_ButtonPane" "Index0But" {
          min_size: 50 14,
          panes: [ $BUTTONTEXT { $RESIZE_WH, text: "Index 0" } ]
        },
        CLONE "T_ButtonPane" "Index1But" {
          min_size: 50 14,
          panes: [ $BUTTONTEXT { $RESIZE_WH, text: "Index 1" } ]
        },
        CLONE "T_ButtonPane" "Index2But" {
          min_size: 10 10,
          panes: [ $BUTTONTEXT { $RESIZE_WH, text: "Index 2" } ]
        },
      ],
    },

  ]
},
