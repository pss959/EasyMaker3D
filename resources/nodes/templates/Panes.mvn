# GUI Panes.
Node "Panes" {
  children: [
    TEMPLATE ButtonPane "ButtonTemplate" {
      padding: .4,
      border: PaneBorder { width: 3, color: "#000000" },
      children: [
        PushButtonWidget "Button" {
          shapes: [ Rectangle {} ],
        }
      ]
    },

    TEMPLATE ImagePane {
      blocks: [
        UniformBlock {
          pass_name: $LIGHTING_PASS,
          textures: [
            Texture "ImagePane Texture" {
              uniform_name: "uTexture",
              image: FileImage {},
              sampler: Sampler "DefaultSampler";,
            },
          ],
          uniforms: [
            Uniform "uShowTexture" { int_val:   1 },
            Uniform "uBaseColor"   { vec4f_val: 1 1 1 1 },
          ],
        }
      ],
      shapes: [ Rectangle {} ],
    },

    TEMPLATE TextPane {
      children: [
        TextNode "Text" {
          text: ".",   # Has to be non-empty for Ion to set up.
          color: "#000000",
          font_name: "Verdana",
          half_smooth_width: 1,
          outline_width: 0,
          layout: LayoutOptions {
            halignment: "kAlignHCenter",
            valignment: "kAlignVCenter",
          }
        }
      ]
    },

    BoxPane "SessionPane" {
      background: PaneBackground { color: "#ddbbaa" },
      border: PaneBorder { width: 4, color: "#000066" },
      padding: 1.4,
      spacing: 1,
      base_size: 30 20,
      panes: [
        TextPane {  # Title
          text: "Session Manager",
          base_size: 1 1.2,
          resize_width:  False,
          resize_height: False,
        },
        BoxPane {   # Top image buttons.
          [IMAGE_SIZE: "base_size: 2.4 2.4"],  # Set size of image buttons.
          orientation: "kHorizontal",
          panes: [
            ButtonPane "Help" {
              padding: .2,
              border: PaneBorder { width: 3, color: "#000000" },
              panes: [ ImagePane { $IMAGE_SIZE, path: "HelpIcon.jpg" } ]
            },
            SpacerPane { resize_width: True },
            ButtonPane "Settings" {
              padding: .2,
              panes: [ ImagePane { $IMAGE_SIZE, path: "SettingsIcon.jpg" } ]
            },
          ]
        },
        BoxPane {   # Main action buttons.
          [TEXT_SIZE: "base_size: 0 1"],  # Set height of button text.
          resize_width:  True,
          resize_height: True,
          spacing: 1,
          panes: [
            ButtonPane "Continue" {
              panes: [ TextPane { $TEXT_SIZE,
                                  text: "Continue previous/current session" }]
            },
            ButtonPane "Load" {
              panes: [ TextPane { $TEXT_SIZE, text: "Load session file" }]
            },
            ButtonPane "New" {
              panes: [ TextPane { $TEXT_SIZE, text: "Start new session" }]
            },
            ButtonPane "Save" {
              panes: [ TextPane { $TEXT_SIZE, text: "Save session" }]
            },
            ButtonPane "SaveAs" {
              panes: [ TextPane { $TEXT_SIZE, text: "Save session as" }]
            },
            ButtonPane "Export" {
              panes: [ TextPane { $TEXT_SIZE, text: "Export selection" }]
            },
          ]
        },
      ]
    },

