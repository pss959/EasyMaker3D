TextPane "T_TextPane" {
  children: [
    TextNode "Text" {
      color: "#000000",
      font_name: "Verdana-Regular",
      half_smooth_width: 1,
      outline_width: 0,
      layout_options: LayoutOptions {
        halignment: "kAlignHCenter",
        valignment: "kAlignVCenter",
        use_metrics: True,  # Makes height more consistent.
      }
    }
  ]
}
