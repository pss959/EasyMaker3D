Node "LaserPointer" {
  pass_name: $LIGHTING_PASS,
  shader_names: ["BaseColor"],
  shapes: [
    Tube "Tube" {
      diameter: .005,
      taper:    100,     # Grow with distance to look roughly straight.
      points: [0 0 0, 0 0 -10000]
    }
  ],
  children: [
    Node "PointerHoverHighlight" {
      shapes: [ Ellipsoid { size: .012 .012 .012 } ]  # Scaled by distance.
    }
  ]
}
