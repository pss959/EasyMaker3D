Tooltip "Tooltip" {
  # Always turn off intersections, and start hidden until shown.
  disabled_flags: "kIntersectAll|kTraversal",
  render_pass_name: $LIGHTING_PASS,   # Ignore shadow passes.

  translation: 0 2 10,  # XXXX FIX THIS!

  children: [
    TextNode "Text" {
      font_name: "Arial_Bold",
      color: "#101010",
      outline_color: "#ffff44",
      outline_width: .1,
      layout: LayoutOptions {
        target_size: 0 .5,
        halignment: "kAlignHCenter",
      }
    }
  ]
}
