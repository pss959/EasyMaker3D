DiscWidget "Stage" {
  inactive_color: "#eeeeee",
  active_color:   "#ffffff",
  hover_color:    "#0a0a0a00",
  scale_range:  .4 10,
  plane_offset: .5,
  translation:  0 1.5 0,
  children: [
    Node "StageGeometry" {
      blocks: [
        UniformBlock {
          pass_name: $LIGHTING_PASS,
          textures: [
            Texture "Stage Texture" {
              uniform_name: "uTexture",
              image:   ProceduralImage { function: "GenerateGridImage" },
              sampler: Sampler "StageSampler" {
                auto_mipmaps: True,
                min_filter:   "kLinearMipmapLinear",
                mag_filter:   "kLinear",
                max_anisotropy: 8,
              }
            },
          ],
          uniforms: [Uniform "uShowTexture"  { int_val: 1 }],
        }
      ],
      shapes: [
        ImportedShape {
          path:            "Stage.off",
          normal_type:     "kVertexNormals",
          tex_coords_type: "kTexCoordsXZ",
          proxy_shape: Cylinder "StageProxy" {
            has_top_cap:   True,
            top_radius:    32,
            bottom_radius: 32,
            height:        1,
          },
        }
      ],
    },
    <"nodes/ModelRoot.mvn">,       # Root to add models to.
    Node "ToolParent" {},          # Node to add active Tools to.
    Node "FeedbackParent" {        # Node to add active Feedback to.
      # Feedback uses the BaseColor shader.
      pass_name: $LIGHTING_PASS,
      shader_names: ["BaseColor"],
    }
  ],
}
