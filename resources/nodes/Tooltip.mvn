  # Always turn off intersections, and start hidden until shown.
  disabled_flags: "kIntersectAll|kTraversal",
  pass_name: $LIGHTING_PASS,   # Ignore shadow passes.

  scale: .25 .25 .25,  # XXXX FIX THIS!
  translation: 0 1 4,  # XXXX FIX THIS!

  children: [
    TextNode "Text" {
      font_name: "Arial_Bold",
      color: "#ffff00",
      outline_color: "#ffffff",
      outline_width: .1,
      layout: LayoutOptions { halignment: "kAlignHCenter" }
    }
  ]
}
