{
  "bindings" : {
    "/actions/default" : {
      "poses" : [
        {
          "output" : "/actions/default/in/LeftHandPose",
          "path" : "/user/hand/left/pose/raw"
        },
        {
          "output" : "/actions/default/in/RightHandPose",
          "path" : "/user/hand/right/pose/raw"
        }
      ],
      "sources" : [
        {
          "path" : "/user/hand/left/input/trigger",
          "mode" : "button",
          "inputs" : {
            "click" : {
              "output" : "/actions/default/in/Pinch"
            }
          }
        },
        {
          "path" : "/user/hand/left/input/grip",
          "mode" : "button",
          "inputs" : {
            "click" : {
              "output" : "/actions/default/in/Grip"
            }
          }
        },
        {
          "path" : "/user/hand/left/input/application_menu",
          "mode" : "button",
          "inputs" : {
            "click" : {
              "output" : "/actions/default/in/Menu"
            }
          }
        },
        {
          "path": "/user/hand/left/input/trackpad",
          "mode": "dpad",
          "inputs": {
            "center": {
              "output": "/actions/default/in/Center"
            },
            "east": {
              "output": "/actions/default/in/Right"
            },
            "north": {
              "output": "/actions/default/in/Up"
            },
            "south": {
              "output": "/actions/default/in/Down"
            },
            "west": {
              "output": "/actions/default/in/Left"
            }
          }
        },
        {
          "path": "/user/hand/left/input/trackpad",
          "mode": "trackpad",
          "inputs": {
            "position": {
              "output": "/actions/default/in/ThumbPosition"
            }
          }
        },
        {
          "path" : "/user/hand/right/input/trigger",
          "mode" : "button",
          "inputs" : {
            "click" : {
              "output" : "/actions/default/in/Pinch"
            }
          }
        },
        {
          "path" : "/user/hand/right/input/grip",
          "mode" : "button",
          "inputs" : {
            "click" : {
              "output" : "/actions/default/in/Grip"
            }
          }
        },
        {
          "path" : "/user/hand/right/input/application_menu",
          "mode" : "button",
          "inputs" : {
            "click" : {
              "output" : "/actions/default/in/Menu"
            }
          }
        },
        {
          "path": "/user/hand/right/input/trackpad",
          "mode": "dpad",
          "inputs": {
            "center": {
              "output": "/actions/default/in/Center"
            },
            "east": {
              "output": "/actions/default/in/Right"
            },
            "north": {
              "output": "/actions/default/in/Up"
            },
            "south": {
              "output": "/actions/default/in/Down"
            },
            "west": {
              "output": "/actions/default/in/Left"
            }
          }
        },
        {
          "path": "/user/hand/right/input/trackpad",
          "mode": "trackpad",
          "inputs": {
            "position": {
              "output": "/actions/default/in/ThumbPosition"
            }
          }
        }
      ]
    }
  },
  "controller_type" : "vive_controller",
  "description" : "Default bindings for IMakerVR for the Vive controller",
  "name" : "IMakerVR bindings for Vive Controller"
}
