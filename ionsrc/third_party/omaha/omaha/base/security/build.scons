Import('env')

#
# Build Security library
#
security_env = env.Clone()

security_env.Append(
    CCFLAGS = [
        '/wd4242',  # conversion from 'type1' to 'type2', possible loss of data
        '/wd4244',  # conversion from 'type1' to 'type2', possible loss of data
        ],
)


security_inputs = [
    'aes.c',
    'b64.c',
    'challenger.cc',
    'hmac.c',
    'md5.c',
    'p256.c',
    'p256_ec.c',
    'p256_ecdsa.c',
    'p256_prng.c',
    'rc4.c',
    'rsa.cc',
    'sha.c',
    'sha256.c',
    ]

# Precompiled headers cannot be used with C files.
security_env.ComponentStaticLibraryMultiarch('security',
                                             security_inputs,
                                             use_pch_default=False)

