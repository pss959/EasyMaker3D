# -----------------------------------------------------------------------------
# Builds the docopt.cpp library.
# -----------------------------------------------------------------------------

Import('base_env')

env = base_env.Clone()

env.Replace(
    CPPPATH  = ['#submodules/docopt.cpp'],
    CXXFLAGS = ['-std=c++11'],
)

env.Library('libdocopt', 'docopt.cpp/docopt.cpp')
